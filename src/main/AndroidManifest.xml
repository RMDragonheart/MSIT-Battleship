<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rmatejczuk.battleshipmobilegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayBattleActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".StatisticActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".PrepareShipsActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".BattleActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>